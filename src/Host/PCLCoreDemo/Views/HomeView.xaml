<mvvm:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCLCoreDemo.Views.HomeView"
             xmlns:views="clr-namespace:PCLCoreDemo.Views;assembly=PCLCoreDemo"
             xmlns:mvvm="clr-namespace:XLabs.Forms.Mvvm;assembly=XLabs.Forms">

    <ContentPage.Content>
        <StackLayout Padding="10,20,10,10" HorizontalOptions="CenterAndExpand" Spacing="10" Orientation="Vertical" x:Name="RelLayout">
            <Label Text="Xamarin Forms PCL Config Demo" FontSize="18" HorizontalTextAlignment="Center" />
            
            <BoxView HeightRequest="30" BackgroundColor="Transparent"></BoxView>
            
            <Button Text="PCL AppConfig" Command="{Binding PclSettingCommand}" BorderColor="Gray" BorderWidth="2"></Button>
            
            <BoxView HeightRequest="30"  BackgroundColor="Transparent"></BoxView>
            
            <Entry Text="{Binding ConfigText}" HorizontalTextAlignment="Center" ></Entry>
        </StackLayout>
    </ContentPage.Content>
</mvvm:BaseView>